<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>resources\lamprey.ico</ApplicationIcon>
    <AssemblyName>Lamprey</AssemblyName>
    <RootNamespace>Lamprey</RootNamespace>
    <Authors>Jason Parker</Authors>
    <Company>ntbox.com</Company>
    <Version>1.0.0</Version>
    <SignAssembly>false</SignAssembly>
    <Win32Resource />
    <Product>Lamprey</Product>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Debug\**" />
    <Compile Remove="dummy_designer\**" />
    <Compile Remove="legacy\autoconf\**" />
    <Compile Remove="legacy\glade\**" />
    <Compile Remove="Release\**" />
    <EmbeddedResource Remove="Debug\**" />
    <EmbeddedResource Remove="dummy_designer\**" />
    <EmbeddedResource Remove="legacy\autoconf\**" />
    <EmbeddedResource Remove="legacy\glade\**" />
    <EmbeddedResource Remove="Release\**" />
    <None Remove="Debug\**" />
    <None Remove="dummy_designer\**" />
    <None Remove="legacy\autoconf\**" />
    <None Remove="legacy\glade\**" />
    <None Remove="Release\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove=".gitignore" />
    <None Remove=".gitmodules" />
    <None Remove="legacy\config.guess" />
    <None Remove="legacy\config.out.in" />
    <None Remove="legacy\config.sub" />
    <None Remove="legacy\configure" />
    <None Remove="legacy\configure.ac" />
    <None Remove="legacy\install-sh" />
    <None Remove="legacy\Makefile" />
    <None Remove="LICENSE" />
    <None Remove="LICENSE.resources" />
    <None Remove="README" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SharpDX.DirectInput" Version="4.2.0" />
    <PackageReference Include="System.IO.Ports" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System">
      <HintPath>System</HintPath>
    </Reference>
    <Reference Include="System.Data">
      <HintPath>System.Data</HintPath>
    </Reference>
    <Reference Include="System.Drawing">
      <HintPath>System.Drawing</HintPath>
    </Reference>
    <Reference Include="System.Windows.Forms">
      <HintPath>System.Windows.Forms</HintPath>
    </Reference>
    <Reference Include="System.Xml">
      <HintPath>System.Xml</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="FormDisplay.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="FormDisplay.Designer.cs">
      <DependentUpon>FormDisplay.cs</DependentUpon>
    </Compile>
    <Compile Update="FormSettings.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="FormSettings.Designer.cs">
      <DependentUpon>FormSettings.cs</DependentUpon>
    </Compile>
    <Compile Update="Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
    <EmbeddedResource Update="Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="resources\**">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="settings\**">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="skins\**">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
